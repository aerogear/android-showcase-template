<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/foreground_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        style="@style/AppTheme.Card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/push_cardview_margin">

        <android.support.constraint.ConstraintLayout
            style="@style/AppTheme.CardContent"
            android:layout_width="match_parent"
            android:layout_height="@dimen/push_cardview_height"
            android:background="@color/red">

            <ImageView
                android:id="@+id/remove"
                android:layout_width="@dimen/push_remove_icon_size"
                android:layout_height="@dimen/push_remove_icon_size"
                android:src="@drawable/ic_delete"
                android:tint="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription" />

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
